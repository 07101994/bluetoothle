<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;monoandroid43;xamarinios10;xamarinmac20;xamarintvos10;uap10.0.16299</TargetFrameworks>
        <!--<TargetFrameworks>netstandard2.0;monoandroid43;xamarinios10;xamarinmac20;xamarintvos10;uap10.0.16299;net46;tizen4</TargetFrameworks>-->
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>aritchie</Authors>
        <Company />
        <AssemblyVersion>1.0.0.0</AssemblyVersion>
        <Description>Cross Platform Reactive Bluetooth LE Plugin for Xamarin

Supported Platforms
* NetStandard
* Android 4.3+
* iOS 7+
* tvOS
* macOS
* UWP (beta)</Description>
        <Product>ACR Bluetooth LE Reactive Plugin for Xamarin and UWP</Product>
        <Version>6.0.0</Version>
        <PackageProjectUrl>https://github.com/aritchie/bluetoothle</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/aritchie/bluetoothle/blob/master/LICENSE.md</PackageLicenseUrl>
        <PackageIconUrl>https://github.com/aritchie/bluetoothle/raw/master/icon.png</PackageIconUrl>
        <PackageReleaseNotes>https://github.com/aritchie/bluetoothle/blob/master/docs/changelog.md</PackageReleaseNotes>
        <PackageTags>ios android uwp windows tvos mac macos xamarin rx reactive ble bluetooth bluetoothle gattserver advertising</PackageTags>
        <!--<PackageTags>ios android uwp windows tvos linux tizen mac macos xamarin rx reactive ble bluetooth bluetoothle gattserver advertising</PackageTags>-->
    </PropertyGroup>

    <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
        <ProduceReferenceAssembly>True</ProduceReferenceAssembly>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(TargetFramework)' == 'monoandroid43' ">
        <TargetFrameworkVersion>v8.0</TargetFrameworkVersion>
        <DefineConstants>$(DefineConstants);MONOANDROID</DefineConstants>
        <Product>Plugin.BluetoothLE - Android</Product>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(TargetFramework)' == 'xamarinios10' ">
        <DefineConstants>$(DefineConstants);IOS</DefineConstants>
        <Product>Plugin.BluetoothLE - iOS</Product>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(TargetFramework)' == 'xamarintvos10' ">
        <DefineConstants>$(DefineConstants);TVOS</DefineConstants>
        <Product>Plugin.BluetoothLE - tvOS</Product>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(TargetFramework)' == 'xamarinmac20' ">
        <DefineConstants>$(DefineConstants);MAC</DefineConstants>
        <Product>Plugin.BluetoothLE - macOS</Product>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(TargetFramework)' == 'tizen4' ">
        <DefineConstants>$(DefineConstants);TIZEN</DefineConstants>
        <Product>Plugin.BluetoothLE - Tizen</Product>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(TargetFramework)' == 'net46' ">
        <DefineConstants>$(DefineConstants);BLUEZ</DefineConstants>
        <Product>Plugin.BluetoothLE - BlueZ</Product>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(TargetFramework)' == 'uap10.0.16299' ">
        <TargetPlatformIdentifier>UAP</TargetPlatformIdentifier>
        <TargetPlatformVersion>10.0.16299.0</TargetPlatformVersion>
        <TargetPlatformMinVersion>10.0.16299.0</TargetPlatformMinVersion>
        <DefineConstants>$(DefineConstants);WINDOWS_UWP</DefineConstants>
        <Product>Plugin.BluetoothLE - UWP</Product>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="Abstractions\**\*.cs" Exclude="Platforms\**\*.cs" />
        <None Include="Platforms\**\*.cs" />
        <PackageReference Include="System.Reactive" Version="3.1.1" />
        <PackageReference Include="MSBuild.Sdk.Extras" Version="1.1.0" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'monoandroid43' ">
        <Compile Include="Platforms\Android\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'xamarinios10' OR '$(TargetFramework)' == 'xamarintvos10' OR '$(TargetFramework)' == 'xamarinmac20' ">
        <Compile Include="Platforms\Apple\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'net46' ">
        <Compile Include="Platforms\net46\**\*.cs" />
        <PackageReference Include="Tmds.DBus" Version="0.5.0" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'uap10.0' ">
        <Compile Include="Platforms\Uwp\**\*.cs" />
        <PackageReference Include="Microsoft.NETCore.UniversalWindowsPlatform" Version="6.0.4" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'tizen4' ">
        <Compile Include="Platforms\Tizen\**\*.cs" />
        <PackageReference Include="Tizen.NET" Version="4.0.0">
            <ExcludeAssets>Runtime</ExcludeAssets>
        </PackageReference>
        <PackageReference Include="Tizen.NET.Sdk" Version="1.0.0" />
        <PackageReference Include="Tizen.Network.Bluetooth" Version="1.0.9" />
    </ItemGroup>

    <Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />
</Project>